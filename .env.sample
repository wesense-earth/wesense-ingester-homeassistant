# Home Assistant Connection
# Copy this file to .env and fill in your values
HA_URL=http://homeassistant.local:8123
HA_ACCESS_TOKEN=your_long_lived_access_token_here

# Node name - friendly device name shown on map (max 24 chars)
NODE_NAME=HA_MyHome

# Output MQTT Broker
MQTT_BROKER=localhost
MQTT_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=

# ClickHouse Database
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=8123
CLICKHOUSE_USER=wesense
CLICKHOUSE_PASSWORD=
CLICKHOUSE_DATABASE=wesense

# Default Location (sensors without explicit location)
# Set to your home location - sensors are rejected if location is (0,0)
DEFAULT_LATITUDE=0.0
DEFAULT_LONGITUDE=0.0
DEFAULT_ALTITUDE=0
DEFAULT_COUNTRY_CODE=
DEFAULT_SUBDIVISION_CODE=
DEFAULT_DEPLOYMENT_TYPE=INDOOR

# Application Settings
LOG_LEVEL=INFO
DISABLE_CLICKHOUSE=false
DRY_RUN=false
